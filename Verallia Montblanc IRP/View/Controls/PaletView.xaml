<UserControl x:Class="IRP.View.Controls.PaletView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IRP.View.Controls"
             xmlns:vm="clr-namespace:IRP.ViewModel"
             xmlns:mock="clr-namespace:IRP.ViewModel.DesignData"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance mock:MockPaletVm, IsDesignTimeCreatable=True}"
             d:DesignHeight="50" d:DesignWidth="50"
             >
    <Border Background="{Binding BackgroundColor}" BorderBrush="{Binding BorderColor}" BorderThickness="1" Margin="1">
        <StackPanel>
            <TextBlock Margin="1" Text="{Binding Palet.Number}" TextAlignment="Right"/>
        </StackPanel>
        <Border.InputBindings>
            <MouseBinding MouseAction="LeftClick" Command=""/>
        </Border.InputBindings>
    </Border>
</UserControl>
